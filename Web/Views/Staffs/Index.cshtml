@model IEnumerable<Model.Staff>

@{
	ViewData["Title"] = "Index";
}

<h1>Danh sách nhân viên</h1>

<p>
	<a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.GrId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.GrId)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Thông tin</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Xoá</a>
				</td>	
			</tr>
		}
	</tbody>
</table>
